{
  "name": "sugarcrm/rest-php-client",
  "description": "An SDK for interacting with Sugar's REST v10 API.",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Mike Russell",
      "email": "mrussell@sugarcrm.com",
      "role": "Developer"
    }
  ],
  "keywords": [
    "sugarcrm",
    "sugar",
    "crm",
    "rest",
    "sdk",
    "v10",
    "api"
  ],
  "require": {
    "php": ">=7.4",
    "michaelj2324/php-rest-client": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*",
    "friendsofphp/php-cs-fixer": "^2"
  },
  "autoload": {
    "psr-4": {
      "Sugarcrm\\REST\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sugarcrm\\REST\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/flex": true
    }
  },
  "scripts": {
    "test": [
      "phpunit"
    ],
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --coverage-clover=\"coverage/clover.xml\""
    ],
    "test:coverage-html": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --coverage-html=\"coverage\""
    ],
    "quality:check": [
      "php vendor/bin/php-cs-fixer fix . --rules=@PSR12 --dry-run"
    ],
    "quality:fix": [
      "php vendor/bin/php-cs-fixer fix . --rules=@PSR12 --"
    ],
    "quality:diff": [
      "php vendor/bin/php-cs-fixer fix . --rules=@PSR12 --dry-run --diff"
    ],
    "docs": [
      "php ./tools/phpDocumentor -d ./src -t ./docs/"
    ]
  }
}
